@import "../node_modules/normalize.css/normalize.css"
@import "core/_variable.styl"

html,body
  height 100%

*,
*::before
*::after
  box-sizing inherit

html
  font-size 16px
  box-sizing border-box

body
  font-family $body-font
  overflow hidden

.container
  width 100vw
  height 100%
  overflow hidden

  body.is-swiper &
    box-sizing border-box

  body.is-nav &
    position absolute